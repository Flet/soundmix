<h1>much sounds</h1>

{{#each sounds}}
  <button onclick="playSound('{{ this.name }}')">{{ this.name }}</button>
{{/each}}

<hr/>
<h3> say things</h3>
<input id="words" type="text" style="width:50%">
<button onclick="SayIt()">Speak</button>

<script src="/socket.io/socket.io.js"></script>
<script>
  var socket = io();

  function playSound(name) {
    socket.emit('play', name);
  }

  function SayIt() {
    var input = document.getElementById('words');
    console.log('speak', input.value)
    socket.emit('speak', input.value);
    input.value = '';
  }

</script>
